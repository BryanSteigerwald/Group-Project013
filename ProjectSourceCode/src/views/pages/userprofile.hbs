<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Shared custom styling */
        body {
            background-color: black;
            color: tan;
            font-family: Georgia, serif;
        }

        .navbar, nav {
            background-color: #D2B48C;
            padding: 10px 20px;
        }

        .navbar-nav .nav-link, nav a {
            color: #000;
            text-decoration: none;
            margin: 0 10px;
            font-size: 18px;
        }

        /* Specific to the User Profile page */
        .container {
            margin: 0 auto;
            padding: 20px;
        }

        form {
            margin-top: 20px;
        }

        form label {
            display: block;
            margin-bottom: 5px;
        }

        form input {
            margin-bottom: 10px;
            padding: 5px;
        }

        #profilePictureContainer img {
            max-width: 650px;
        }

        /* Button styling */
        input[type="submit"] {
            background-color: tan;
            color: black;
            padding: 5px 10px;
            border: none;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #d2a679; /* Darker tan color on hover */
        }

        .hidden {
            display: none;
        }
    </style>
</head>


<body>
    <div class="center-container">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-md-8">
                    <h1>{{ username }}'s User Profile</h1>

                    <div id="profileData">
                        <span>Email: <span id="email" name="changeEmail">{{ email }}</span></span><br>
                        <span>Age: <span id="age" name="changeEmail">{{ age }}</span></span><br>
                    </div>

                    <button id="editDetailsBtn">Edit details</button>

                    <div id="editForm" class="hidden">
                        <input type="email" id="newEmail" name="newEmail" placeholder="New Email" required>
                        <br>
                        <input type="number" id="newAge" name="newAge" placeholder="New Age" required>
                        <br>
                        <input type="file" id="newProfilePicture" name="newProfilePicture" accept="image/*" placeholder="New Profile Picture">
                        <br>
                        <button id="saveChangesBtn">Save Changes</button>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center" id="profilePictureContainer">
                <!-- Profile picture will be displayed here -->
                <img id="profilePicture" src="{{ profilePicture }}">
            </div>
        </div>
    </div>

    <script>
        document.getElementById('editDetailsBtn').addEventListener('click', function() {
            var editForm = document.getElementById('editForm');
            if (editForm.classList.contains('hidden')) {
                editForm.classList.remove('hidden');
            } else {
                editForm.classList.add('hidden');
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            // Your code here
            document.getElementById('newProfilePicture').addEventListener('change', function(event) {
                const file = event.target.files[0];
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    const profilePictureContainer = document.getElementById('profilePictureContainer');
                    profilePictureContainer.innerHTML = `<img src="${e.target.result}" alt="Profile Picture">`;
                }
                
                reader.readAsDataURL(file);
            });
        });


        document.getElementById('saveChangesBtn').addEventListener('click', async function() {
            const newEmail = document.getElementById('newEmail').value;
            const newAge = document.getElementById('newAge').value;
            const newProfilePicture = document.getElementById('newProfilePicture').files[0];
            
            // Construct FormData-like object manually
            const formData = {
                newEmail: newEmail,
                newAge: newAge,
                newProfilePicture: newProfilePicture
            };

            try {
                const response = await fetch('/userprofile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    // If the response is successful, redirect to the user profile page
                    window.location.href = '/userprofile';
                } else {
                    // If the response is not successful, log an error message
                    console.error('Failed to update user profile');
                }
            } catch (error) {
                // If an error occurs during the fetch operation, log the error
                console.error('Error updating user profile:', error);
            }
        });
    </script>
</body>
</html>
