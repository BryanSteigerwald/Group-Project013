<!DOCTYPE html>
<html lang="en">


{{>message}}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class Selector</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Additional custom styling */
        body {
            background-color: #f0f0f0;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Class Search Section -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="mb-4">Class Search</h1>
                        <form id="searchForm" action="/classes/search" method="GET">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" id="searchInput" name="term" placeholder="Search for classes...">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                        </form>
                        <div class="list-group" id="classList">
                        <!-- Recommended classes will be dynamically populated here -->
                        <ul>
                            {{#each classes}}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="class-name" data-class-id="{{class_id}}">{{name}}</span>
                                <div>
                                <form action="/classes/add" method="POST">
                                    <input type="hidden" name="class_id" value="{{class_id}}">
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </form>
                                <button class="btn btn-secondary show-description-btn" data-class-id="{{class_id}}" data-description="{{description}}">Show Description</button>

                                </div>
                            </li>
                            {{/each}}
                        </ul>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Class Description Section -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="mb-4">Class Description</h1>
                        <p class="card-text" id="classDescription">Click on "Show Description" button to view description.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommended Classes Carousel Section -->
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h1 class="mb-4">Recommended Classes</h1>
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://via.placeholder.com/800x400?text=Class+1" class="d-block w-100" alt="Class 1">
                        </div>
                        <div class="carousel-item">
                            <img src="https://via.placeholder.com/800x400?text=Class+2" class="d-block w-100" alt="Class 2">
                        </div>
                        <div class="carousel-item">
                            <img src="https://via.placeholder.com/800x400?text=Class+3" class="d-block w-100" alt="Class 3">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script>
        //JavaScript to handle click event on "Show Description" button 
        document.addEventListener('DOMContentLoaded', function () {
            const descriptionButtons = document.querySelectorAll('.show-description-btn');
            descriptionButtons.forEach(function (button) {
                button.addEventListener('click', function () {
                    const classId = this.getAttribute('data-class-id');
                    console.log('Class ID:', classId); 
                    const classDescription = this.getAttribute('data-description');
                    console.log('Class Description:', classDescription);
                    document.getElementById('classDescription').innerText = classDescription;
                });
            });
        });
    </script>
</body>
</html>
